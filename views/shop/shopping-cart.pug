extends ../layout
    
block content
    if (products)
        .row
            .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
                ul.list-group
                    li.list-group-item
                        span.badge
                        strong="Title"
                        span.label.label-success="$12"
                        .btn-group
                            button.btn.btn-primary.btn-xs.dropdown-toggle(type="button")="Action"
                                span.caret
                            ul.dropdown-menu
                                li
                                    a(href="#")="Reduce By 1"
                                li
                                    a(href="#")="Remove All"
        .row
            .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
                strong="Total:"
        hr
        .row
            .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
                button.btn.btn-success(type="button")="Checkout"
    else
        .row
            .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
                h2="No Item in the cart"
